{
    "name": "php-xapi/repository-mongodb",
    "description": "MongoDB implementation of an xAPI (Experience API) repository",
    "keywords": ["xAPI", "Tin Can API", "Experience API", "storage", "database", "repository", "document", "MongoDB"],
    "homepage": "https://github.com/php-xapi/repository-mongodb/",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Flothmann",
            "homepage": "https://github.com/xabbuh"
        }
    ],
    "require": {
        "doctrine/mongodb-odm": "~1.0",
        "php-xapi/model": "^0.1.0",
        "php-xapi/repository-api": "^0.2.0",
        "php-xapi/repository-doctrine": "^0.2.1"
    },
    "require-dev": {
        "php-xapi/exception": "^0.1.0"
    },
    "conflict": {
        "xabbuh/xapi-mongodb-storage": "*"
    },
    "provide": {
        "php-xapi/repository-implementation": "0.2"
    },
    "autoload": {
        "psr-4": {
            "Xabbuh\\XApi\\Storage\\MongoDB\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
